{
  "version": 2,
  "builds": [
    {
      "src": "frontend/vite.config.js",
      "use": "@vercel/vite-react",
      "config": {
        "project": "frontend/package.json"
      }
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/main.py"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/index.html"
    }
  ]
}